<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1>Lista de Publicaciones</h1>

    <ul>
        <% posts.forEach(function(post) { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.description %></p>
                <p>Autor: <%= post.author %></p>
            </li>
        <% }); %>
    </ul>
    <!-- Mostrar los posts aquÃ­ -->

</body>
</html>